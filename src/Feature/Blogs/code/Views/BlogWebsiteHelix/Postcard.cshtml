@using System.Web.Mvc;
@model IEnumerable<BlogWebsiteHelix.Feaure.Blogs.Models.ArticleModel>
@{
    var item = Sitecore.Context.Database.GetItem("{6D558108-FC5E-4A19-AE7A-D4AFC8B91879}");
}
<main class="container blog-posts">
    @if (Model != null)
    {
        <div class="row">

            @foreach (var card in Model)
            {
            <div class="blog-post-card card col-lg-4 col-md-6">
                @Html.Raw(card.ArticleSmallImage)
                <div class="card-body bg-light">
                    <strong class="d-inline-block mb-2 text-success">Design</strong>
                    <h3 class="card-title">@Html.Raw(card.Title)</h3>
                    <div class="mb-1 text-muted">@Html.Raw(card.PostedDate.ToString("MMM dd, yyyy"))</div>
                    <p>@Html.Raw(card.ShortDescription)</p>
                    <a class="btn btn-warning btn-block" href="/blogdetail?blogId=@Html.Raw(card.Id)">@Html.Sitecore().Field("PostCardButtonText", item)</a>
                </div>
            </div>
            }
        </div>
    }
</main>

